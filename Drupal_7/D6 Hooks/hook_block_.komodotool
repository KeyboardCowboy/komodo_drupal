  "value": [
    "/**", 
    " * Implements hook_block().", 
    " */", 
    "function [[%b]]_block($op = 'list', $delta = 0, $edit = array()) {", 
    "  switch ($op) {", 
    "    case 'list':", 
    "      $blocks['!@#_currentPos!@#_anchor'] = array(", 
    "        'info' => t(''),", 
    "      );", 
    "", 
    "      return $blocks;", 
    "      break;", 
    "", 
    "    case 'view':", 
    "      $block = array();", 
    "      switch ($delta) {", 
    "        case '':", 
    "          $block['subject'] = t('');", 
    "          $block['content'] = '';", 
    "          break;", 
    "      }", 
    "", 
    "      return $block;", 
    "      break;", 
    "  }", 
    "}"
  ], 
  "indent_relative": "true"
}